
<!-- <div class="tab-pane quesYScroll" id="definitions"> -->
<div class="tab-pane" id="definitions">
    <div class="form-group row">
        <div class="col-xs-10 col-xs-offset-1 col-md-10 col-md-offset-1 inMiddle">
            <label class='control-label'>Definitions
                <button type="button" data-toggle="popover"  class="btn btn-info btn-simple btn-xs" data-content="<%-tooltip.tooltipQueDefintn01%>">
                    <i class="ti-help-alt fa-lg"></i>
                </button>
            </label>
            <div id='allDefis'>
                <% 
                                            var defdivs = 0 ;
                                            if(typeof data.definitions == 'object' && data.definitions){
                                                // answers are there 
                                                defdivs = data.definitions.length;
                                            }else{
                                                defdivs = 0;
                                            }
                                        %>
                    <%for(var k=0; k< defdivs;k++){%>
                        <div class='col-lg-12 ' id="defidiv_old-<%-k%>">
                            <div class='card inputcard1'>
                                <div class='card-content'>
                                    <h6>Name</h6>
                                    <div>
                                        <input type="text" name="defi_name_old-<%-k%>" value="<%if(typeof data.definitions == 'object' && data.definitions){%><%- data.definitions[k].def %><%}else{%><%}%>"
                                            class="form-control" id="defi_name_old-<%-k%>">
                                    </div>
                                    <br>
                                    <h6>Value</h6>
                                    <textarea name="defi_value_old" class="form-control" id="defi_value_old"><%if(typeof data.definitions == 'object' && data.definitions){%><%- data.definitions[k].value %><%}else{%><%}%></textarea>
                                </div>
                                <div class='card-footer footer1'>
                                    <hr>
                                    <div class="footer-title">
                                        <span class="text-muted"> &nbsp;</span>
                                    </div>

                                    <div class="pull-right">

                                        <button type="button" rel="tooltip" title="" class="btn btn-danger" data-original-title="Delete" id='deleteDefi'
                                            <% if(k==0){%>
                                            <%}%> >
                                                <i class="ti-trash"></i>
                                        </button>

                                    </div>
                                </div>
                            </div>
                        </div>
                        <%}%>


            </div>

            <div align="right">
                <input class='btn btn-default' id="addNewDefi" type="button" value="Definition +" />
            </div>



        </div>
    </div>
  
</div>