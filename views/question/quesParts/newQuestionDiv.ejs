
<!-- <div class="tab-pane quesYScroll" id="question"> -->
<div class="tab-pane" id="question">
    <form  class="form-horizontal">
        <div class="form-group row">
            <div class="col-xs-10 col-xs-offset-1 col-md-10 col-md-offset-1 inMiddle">
                <label class="control-label text-right">
                    <%if(pipe=="fillIn"){%>
                    Instruction
                    <%}else{%>
                    Question
                    <%}%>
                    <button type="button" data-toggle="popover"  class="btn btn-info btn-simple btn-xs" data-content="<%-queTooltip%>">
                        <i class="ti-help-alt fa-lg"></i>
                    </button>
                </label>
                <%if(pipe=="sub"){%>
                    <textarea class="form-control" rows="10" id="id_commentsT"><%-data.question%></textarea>
                <%}else{%>
                    <textarea class="form-control" rows="5" id="id_commentsT"><%-data.question%></textarea>
                <%}%>
                
            </div>
        </div>
        <%if(pipe=="fillIn"){%>
            <div class="form-group row">
                <div class="col-xs-10 col-xs-offset-1 col-md-10 col-md-offset-1 inMiddle">
                    <label class=" control-label text-right">
                        Statement
                        <button type="button" data-toggle="popover"  class="btn btn-info btn-simple btn-xs" data-content="<%-tooltip.tooltipFillStat01%>">
                            <i class="ti-help-alt fa-lg"></i>
                        </button>
                    </label>
                    <textarea class="form-control" rows="5" id="id_commentsSt"><%-data.statement%></textarea>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-xs-10 col-xs-offset-1 col-md-10 col-md-offset-1 inMiddle">
                    <label class="control-label text-right">
                        Suggestion
                        <button type="button" data-toggle="popover"  class="btn btn-info btn-simple btn-xs" data-content="<%-tooltip.tooltipFillSugg01%>">
                            <i class="ti-help-alt fa-lg"></i>
                        </button>
                    </label>
                    <textarea class="form-control" rows="5" id="id_commentsSg"><%-data.suggestion%></textarea>
                </div>
            </div>
        <%}%>
    
    </form>
</div>

