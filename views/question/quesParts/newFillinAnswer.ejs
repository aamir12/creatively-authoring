<% if(pipe=="fillIn"){%>
<div class="tab-pane" id="fillAnswers">
        <div class="form-group row">
            <div class="col-xs-10 col-xs-offset-1 col-md-10 col-md-offset-1 inMiddle">
                <label class='control-label'>Answers</label>
                <div id='allAnswer'>
                        <!-- <h3><% if(typeof data.something == 'object' && message) { %><%-message%><% }else{%>message is not defined<%} %></h3> -->
                        <% 
                            var answerdivs = 0 ;
                            if(typeof data.answers == 'object' && data.answers){
                                // answers are there 
                                <!-- answerdivs = data.answers.length; -->
                                if(data.answers.length==0){
                                    answerdivs = 1
                                }else{
                                    answerdivs = data.answers.length;
                                }
                            }else{
                                answerdivs = 1;
                            }
                        %>
                        
                                <% for(var i=0; i<answerdivs;i++){ %>
                                <div class='col-lg -12 ' id="answerdiv_old-<%-i%>">
                                    <div class='card inputcard1'>
                                        <div class='card-content'>
                                            <h6>Name
                                                <button type="button" data-toggle="popover"  class="btn btn-info btn-simple btn-xs" data-content="<%-tooltip.tooltipFillAns01%>">
                                                        <i class="ti-help-alt fa-lg"></i>
                                                </button>
                                            </h6>
                                            <div>
                                                <textarea name="answer_stmt" class="form-control" id="answer_name_old-<%-i%>"><%if(typeof data.answers == 'object' && data.answers && !isNew){%><%- data.answers[i].name %><%}else{%><%}%></textarea>
                                            </div>
                                            <br>
                                            <h6>Value
                                                <button type="button" data-toggle="popover"  class="btn btn-info btn-simple btn-xs" data-content="<%-tooltip.tooltipFillAns02%>">
                                                        <i class="ti-help-alt fa-lg"></i>
                                                </button>
                                            </h6>
                                                 <textarea name="answer_value" class="form-control" id="answer_value_old"><%if(typeof data.answers == 'object' && data.answers && !isNew){%><%- data.answers[i].value %><%}else{%><%}%></textarea> 
                                        </div>
                                        <div class='card-footer footer1'>
                                            <hr>
                                            <%if(i==0)  {%>
                                                <div class="footer-title"><span class="text-muted">&nbsp;</span></div>
                                                <div class="pull-right">
                                                    <span class="text-muted"> &nbsp;</span>
                                            <%} else {%>
                                                <div class="footer-title"><span class="text-muted">&nbsp;</span></div>
                                                    <div class="pull-right">
                                                        <button type="button" rel="tooltip" title="" class="btn btn-danger" data-original-title="Delete" id='deleteAnswer'>
                                                            <i class="ti-trash"></i>
                                                        </button>
                                            <%}%>
                                                </div>
                                                </div>
                                        </div>
                                    </div>
                                    <%}%>
                        </div>
                        <br>
                        <div align="right">
                            <input class='btn btn-default' id="addNewAnswer" type="button" value="Answer +" />
                        </div>
                    </div>
            </div>
         

</div>
<%}%>