   <div class="row">
    <div  class="col-md-6 col-md-offset-3">
      <div class="formCont">
          <ul class="progress-tracker progress-tracker--text progress-tracker--center">
            <li class="progress-step is-active">
              <span class="progress-marker"></span>
              <span class="progress-text">
                <h4 class="progress-title">Step 1</h4>
                <span class="progress-line"> Request for an account</span>  
              </span>
            </li>
          
            <li class="progress-step">
              <span class="progress-marker"></span>
              <span class="progress-text">
                <h4 class="progress-title">Step 2</h4>
                <span class="progress-line"> Verify your email address and set password.</span>
              </span>
            </li>
          
            <li class="progress-step">
              <span class="progress-marker"></span>
              <span class="progress-text">
                <h4 class="progress-title">Step 3</h4>
                <span class="progress-line"> Account will be approved by admin </span>
              </span>
            </li>
          </ul>

          <div class="login-title" align="center">
            <b>Request For An Account</b>
          </div>

          <% if (status=='success') { %>
            <div class="box-body" id="alert_box1">
              <div class="alert alert-success alert-dismissable">                
                <i class="fa fa-thumbs-o-up"></i>
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">X</button>
                <b><%=msg%></b>
                </div>
            </div>
          <% } %>

            

          <% if (status=='error') { %>
            <div class="box-body" id="alert_box2">
              <div class="alert alert-danger alert-dismissable">
                <i class="fa fa-ban"></i>
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">X</button>
                <b><%=msg%></b>
                </div>
            </div>
          <% } %>

            
          <form role="form" id="regFrm" class="regClsFrm " name="regFrm" action="/authoraccountrequest" method="post">
            <div class="form-group">
              <label class="fg_label">Name <strong class="text-danger">*</strong></label>
              <input type="text" id="name" name="name" class="form-control"  required> 
            </div>

            <div class="form-group">
              <label class="fg_label">Affiliation <strong class="text-danger">*</strong></label>
              <input type="text" name="affiliation" id="affiliation" class="form-control"  />
            </div>

            <div class="form-group">
              <label class="fg_label">Department <strong class="text-danger">*</strong></label>
              <input type="text" id="dept" name="dept" class="form-control"  />
            </div>
          
            <div class="form-group">
              <label class="fg_label">Email <strong class="text-danger">*</strong></label>
              <input type="text" id="email" name="email" class="form-control" />
            </div>

            <div class="form-group">
              <label class="fg_label">Department webpage on your institution's website listing your name and email address used above <strong class="text-danger">*</strong></label>
              <input type="text" id="personalPage" name="personalPage" class="form-control"/>
            </div>

            <div class="form-group">
              <label class="fg_label">Phone Number (Optional)</label>
              <input type="text" id="phoneNo" name="phoneNo" class="form-control"  onkeypress="javascript:return isPhoneNumber(event)" maxlength="10"/>
            </div>


            <div class="form-group">
              <label class="fg_label">How did you hear about us? <strong class="text-danger">*</strong></label>
              <input type="text" id="howToKnow" name="howToKnow" class="form-control" />
            </div>


            <div class="form-group">
              <label class="fg_label">Courses you taught or you plan to teach <strong class="text-danger">*</strong></label>
              <input type="text" id="coursesYouTeach" name="coursesYouTeach" class="form-control" />
            </div>

            <br>
            
              <div class="row">
              
                <div class="col-lg-6">
                  <div class="text-left" style="font-size:16px;padding-top:8px;padding-bottom:5px">
                    <a href="/authorlogin">I already have a membership</a>
                  </div>
                </div>

                <div class="col-lg-6">
                  <button type="submit" class="btn btn-wd btn-lg btn-fill pull-right signbtn" id="submitbutton">
                    <b>Send </b>Request
                    <span class="btn-label">
                      <i class="ti-angle-right"></i>
                    </span> 
                  </button>
                </div>

              </div>
            
           
          </form>
         
      </div>
      
    </div>
   </div>
   

