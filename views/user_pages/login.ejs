<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <meta content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0' name='viewport' />
    <meta name="viewport" content="width=device-width" />
    <title> Examineer | Author DashBoard</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    <!-- Bootstrap core CSS     -->
    <!-- <link href="../../PaperDashBoard/css/bootstrap.min.css" rel="stylesheet" /> -->
    <!--  Paper Dashboard core CSS    -->
    <link href="../../author_public/PaperDashBoard/css/paper-dashboard.css" rel="stylesheet" />
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/latest/css/font-awesome.min.css" rel="stylesheet">
    <link href='https://fonts.googleapis.com/css?family=Muli:400,300' rel='stylesheet' type='text/css'>
    <!-- <link href='http://fonts.googleapis.com/css?family=Roboto:400,700,300' rel='stylesheet' type='text/css'> -->
    <link href="../../author_public/PaperDashBoard/css/themify-icons.css" rel="stylesheet">
    <!-- <link rel = "stylesheet" href="css/author1.css"> -->
    <link rel="stylesheet" href="../../author_public/css/author_newLogin.css">
    <!-- <script src="../../PaperDashBoard/js/jquery-3.1.1.min.js" type="text/javascript"></script> -->
 
</head>
<style>
.content {
  position: fixed;
  top: 500px; 
  background: rgba(0, 0, 0, 0.5);
  color: #f1f1f1;
  width: 50%;
  text-align: left;
  padding: 5px;
  z-index: 2147483647;

}

#myBtn {
  width: 200px;
  font-size: 18px;
  padding: 10px;
  border: none;
  background: #000;
  color: #fff;
  cursor: pointer;
}
</style>

<body class="bodyCss">
    <div class="newlbg"></div>    

    <nav class="navbar navbar-inverse  navBG">
        <div class="container-fluid">

            <div class="navbar-header">
                <button type="button" class="navbar-toggle">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar bar1"></span>
                    <span class="icon-bar bar2"></span>
                    <span class="icon-bar bar3"></span>
                </button>
                <a class="navbar-brand newBrand" href="#">Examineer</a>
            </div>


            <ul class="nav navbar-nav navbar-right">
                <li><a href="<%-studentUrl%>">Student</a></li>
                <li><a href="#">Author</a></li>
                <!-- <li><a href="#">Help</a></li> -->
            </ul>
        </div>
    </nav>

    <div class="container-fuild" id="newlogin">
        <div class="row">
            <div class="col-lg-9 col-md-8 col-sm-6 col-xs-12 imgDiv">
                <!-- <img src="author_public/images/A4.png"  id="stdImg" class="img-responsive img-center" alt="Image"> -->
                <img src="author_public/images/logo.png" id="imglogo" class="img-responsive " alt="Image">
                <div class="item embed-responsive embed-responsive-16by9" id="stdImg">
                    <video class="embed-responsive-item" autoplay muted id="myVideo">
                        <source src="<%-userMeta.loginVideoPath%><%-userMeta.loginVideoName[Math.floor(Math.random() * userMeta.loginVideoName.length)]%>" type="video/mp4">
                    </video>
                    <!-- <div class="content">
                        <h1>Heading</h1>
                      </div> -->
                </div>
                

            </div>
            <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12 loginFrmDiv sticky ">
                <img src="author_public/images/logo.png" id="mainLogo" width="450px" class="img-responsive logo"
                    alt="Image">
                <br>
                <h3 class="text-center">
                    <b>Login to </b>Examineer
                </h3>

                <% if (status=='error') { %>
                <div class="box-body" id="alert_box1">
                    <div class="alert alert-danger alert-dismissable">
                        <i class="fa fa-ban"></i>
                        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">X</button>
                        <b><%=msg%></b>
                    </div>
                </div>
                <% } %>

                <!-- <form  name="loginForm" class="lgFrm">   -->
                <form role="form" name="loginForm" class="lgFrm" action="/author_login" method="post">
                    <div class="form-group">
                        <!-- <label for="quizId">Quiz ID:</label> -->
                        <input type="email" class="form-control custom-css" placeholder="Email" name="email">
                    </div>
                    
                    <div class="form-group">
                        <!-- <label for="uname">User Name:</label> -->
                        <input type="password" class="form-control custom-css" placeholder="Password" name="password">
                    </div>
                    <br>
                    <div align="right" id="signInBtn">
                        <button type="submit" class="btn btn-wd btn-lg btn-fill btn-move-right">
                            <b>Sign</b> In
                            <span class="btn-label">
                                <i class="ti-angle-right"></i>
                            </span>
                        </button><br /><br />
                        <div class="forgot" style="font-size:16px;">
                            <a href="/authorforgot"><b>Forgot Your Password?</b></a><br>
                            <a href="/request"><b>Request for an account</b></a><br>
                            <a href="<%-docUrl%>" target="_blank"><b>Read the docs</b></a>
                        </div>
                    </div>
                </form>


                <div class="text-center footer">
                    <span id="year"> <%-copyright%></span>
                    <!-- &copy;<span id="logcurrentYear"></span> examineer.in -->
                </div>
            </div>
        </div>
    </div>
</body>
<script>
    $(function () {
        $('.navbar-toggle').click(function () {
            $("ul.navbar-nav").toggle(300);
        });
    })
</script>

</html>